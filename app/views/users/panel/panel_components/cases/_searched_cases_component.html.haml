- if filtered_court_cases&.count&.positive?
  .pt-2.pb-2
    - filtered_court_cases&.each do |court_case|
      - if !court_case.active?
        = render partial: "users/panel/panel_components/cases/case_component", locals: { court_case: court_case }, assigns: { user: @user, searched: true }

- elsif filtered_court_cases&.count == 0 && search_query.present?
  #no-cases-found-message.case-container.p-3.mb-3.rounded-md.bg-z-gray-lightest
    .container.relative.z-20
      .max-w-sm.mx-auto
        %p.mb-1.text-center.text-z-gray.font-light.text-lg.md:text-xl
          No cases were found by "#{search_query}"
